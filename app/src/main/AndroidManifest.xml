<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaminari.multiremote" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.sensor.accelerometer" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MouseActivity"
            android:label="@string/title_activity_mouse"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name=".GamePadActivity"
            android:label="@string/title_activity_game_pad"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".RacingControllerActivity"
            android:label="@string/title_activity_racing_controller"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".KeyboardActivity"
            android:label="@string/title_activity_keyboard" >
        </activity>
    </application>

</manifest>
