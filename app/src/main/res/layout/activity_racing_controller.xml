<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kaminari.multiremote.RacingControllerActivity">

    <Button
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/buttonRace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Race" />

    <Button
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/buttonBrake"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Brake" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Race"
        android:id="@+id/autoRace"
        android:layout_above="@+id/buttonRace"
        android:layout_alignLeft="@+id/buttonRace"
        android:layout_alignStart="@+id/buttonRace"
        android:checked="false" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="NOS"
        android:id="@+id/buttonNOS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/autoRace" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="E Brake"
        android:id="@+id/buttonEBrake"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/autoRace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift Up"
        android:id="@+id/buttonShiftUp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonShiftDown"
        android:layout_alignEnd="@+id/buttonShiftDown"
        android:layout_alignLeft="@+id/buttonShiftDown"
        android:layout_alignStart="@+id/buttonShiftDown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift Down"
        android:id="@+id/buttonShiftDown"
        android:layout_alignBottom="@+id/buttonNOS"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonExtraUp"
        android:layout_above="@+id/buttonExtraRight"
        android:layout_toLeftOf="@+id/buttonExtraRight"
        android:layout_toStartOf="@+id/buttonExtraRight" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonExtraRight"
        android:layout_below="@+id/buttonShiftUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonExtraDown"
        android:layout_below="@+id/buttonExtraRight"
        android:layout_toLeftOf="@+id/buttonExtraRight"
        android:layout_toStartOf="@+id/buttonExtraRight" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/buttonExtraLeft"
        android:layout_above="@+id/buttonExtraDown"
        android:layout_toLeftOf="@+id/buttonExtraDown"
        android:layout_toStartOf="@+id/buttonExtraDown" />

</RelativeLayout>
